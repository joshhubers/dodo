<div class="spaced">
  <h2>Projects</h2>
  <button {{action 'showModal'}}>New Project</button>
</div>

{{#if sortedProjects}}
{{#each sortedProjects as |project|}}
  {{project-tile
    deleteProject=(action 'deleteProject')
    editProject=(action 'editProject')
    project=project}}
{{/each}}

{{else}}
  You have no projects currently!
{{/if}}

{{#if isShowingModal}}
  {{project-edit-modal
    onClose=(action 'onClose')
    createProject=(action 'createProject')
    updateProject=(action 'updateProject')
    project=selectedProject}}
{{/if}}
