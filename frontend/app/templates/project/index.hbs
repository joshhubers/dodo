<div class="spaced">
  <h2>Projects</h2>
  <button {{action 'showModal'}}>New Project</button>
</div>

{{#project-loader addAction=(action 'createProject') as |projects isLoading addNewProject|}}
  {{#if isLoading}}

  {{else}}
    {{#each projects as |project|}}
      {{info-tile
          title=project.title
          description=project.description}}
    {{/each}}
  {{/if}}

  {{#if isShowingModal}}
    {{project-edit-modal
      onClose=(action 'onClose')
      createProject=addNewProject
      project=selectedProject}}
  {{/if}}
{{/project-loader}}

